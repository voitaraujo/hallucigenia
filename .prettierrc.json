{
	"trailingComma": "es5",
	"tabWidth": 2,
	"jsxSingleQuote": true,
	"useTabs": true,
	"printWidth": 80,
	"semi": true,
	"singleQuote": true,
	"bracketSpacing": true,
	"bracketSameLine": false,
	"arrowParens": "always",

	"importOrder": ["^@/|^./|^../"],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,

	"plugins": ["@trivago/prettier-plugin-sort-imports"]
}
