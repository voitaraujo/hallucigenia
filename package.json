{
	"name": "hallucigenia",
	"type": "module",
	"version": "0.3.3",
	"repository": "voitaraujo/hallucigenia",
	"main": "dist/hallucigenia.js",
	"description": "Scuffed CLI for tracking updates to branches on bitbucket repositories and running side effects(scripts)",
	"keywords": [
		"bitbucket",
		"CLI",
		"repositories",
		"branches",
		"clone"
	],
	"license": "MIT",
	"bin": {
		"hallucigenia": "dist/hallucigenia.js"
	},
	"author": {
		"name": "Voitila Araujo",
		"email": "voitilaaraujo@gmail.com",
		"url": "https://voit.dev"
	},
	"engines": {
		"node": ">=18"
	},
	"scripts": {
		"dev": "esbuild --bundle src/hallucigenia.ts --platform=node --outfile=dist/hallucigenia_d.js --packages=external --format=esm && node dist/hallucigenia_d.js",
		"build:esbuild": "esbuild --bundle src/hallucigenia.ts --platform=node --outfile=dist/hallucigenia.js --packages=external --format=esm --minify",
		"prettier:check": "prettier --check .",
		"prettier": "prettier --write .",
		"lint:check": "eslint .",
		"lint": "eslint . --fix",
		"ts-coverage": "typescript-coverage-report"
	},
	"homepage": "https://github.com/voitaraujo/hallucigenia",
	"devDependencies": {
		"@total-typescript/ts-reset": "^0.5.1",
		"@trivago/prettier-plugin-sort-imports": "^4.3.0",
		"@types/clear": "^0.1.4",
		"@types/eslint": "^8.56.5",
		"@types/eslint__js": "^8.42.3",
		"@types/figlet": "^1.5.8",
		"@types/node": "^20.11.25",
		"@typescript-eslint/eslint-plugin": "^7.1.1",
		"@typescript-eslint/parser": "^7.1.1",
		"esbuild": "^0.20.2",
		"eslint": "^8.57.0",
		"prettier": "^3.2.5",
		"typescript": "^5.0.0",
		"typescript-coverage-report": "^1.0.0",
		"typescript-eslint": "^7.1.1"
	},
	"dependencies": {
		"@inquirer/prompts": "^4.1.0",
		"axios": "^1.6.7",
		"chalk": "^5.3.0",
		"chokidar": "^3.6.0",
		"clear": "^0.1.0",
		"figlet": "^1.7.0",
		"latest-version": "^9.0.0",
		"ora": "^8.0.1",
		"zod": "^3.22.4"
	},
	"peerDependencies": {
		"react": "^18.2.0",
		"react-dom": "^18.2.0"
	},
	"typeCoverage": {
		"ignoreFiles": [
			"dist/**/*",
			"coverage-ts/**/*"
		]
	}
}
