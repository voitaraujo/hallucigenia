{
	"name": "hallucigenia",
	"type": "module",
	"version": "0.2.0",
	"bin": {
		"hallucigenia": "./dist/hallucigenia.js"
	},
	"author": "Voitila Araujo<voitilaaraujo@gmail.com>",
	"scripts": {
		"build:ncc": "ncc build src/hallucigenia.ts -o dist/hallucigenia --minify",
		"build:esbuild": "esbuild --bundle src/hallucigenia.ts --platform=node --outfile=dist/hallucigenia.js --packages=external --format=esm --minify",
		"link-cli:osx": "pnpm --global unlink hallucigenia && chmod +x ./dist/hallucigenia.js && pnpm --global link",
		"link-cli:win": "pnpm --global unlink hallucigenia && pnpm --global link",
		"prettier:check": "prettier --check .",
		"prettier": "prettier --write .",
		"lint:check": "eslint .",
		"lint": "eslint . --fix"
	},
	"homepage": "https://github.com/voitaraujo/hallucigenia",
	"devDependencies": {
		"@total-typescript/ts-reset": "^0.5.1",
		"@trivago/prettier-plugin-sort-imports": "^4.3.0",
		"@types/clear": "^0.1.4",
		"@types/eslint": "^8.56.5",
		"@types/eslint__js": "^8.42.3",
		"@types/figlet": "^1.5.8",
		"@types/node": "^20.11.25",
		"@typescript-eslint/eslint-plugin": "^7.1.1",
		"@typescript-eslint/parser": "^7.1.1",
		"@vercel/ncc": "^0.38.1",
		"esbuild": "^0.20.1",
		"eslint": "^8.57.0",
		"pkg": "^5.8.1",
		"prettier": "^3.2.5",
		"typescript": "^5.0.0",
		"typescript-eslint": "^7.1.1"
	},
	"dependencies": {
		"@inquirer/prompts": "^4.1.0",
		"axios": "^1.6.7",
		"chalk": "^5.3.0",
		"chokidar": "^3.6.0",
		"clear": "^0.1.0",
		"figlet": "^1.7.0",
		"ora": "^8.0.1",
		"zod": "^3.22.4"
	}
}
